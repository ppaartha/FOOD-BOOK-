<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome_activity_background"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/foodbook"
            android:layout_width="301dp"
            android:layout_height="55dp"
            android:text="FOOD BOOK"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.162" />

        <EditText
            android:id="@+id/Sign_in_Email"
            android:layout_width="338dp"
            android:layout_height="48dp"
            android:backgroundTint="#090808"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#090808"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodbook"
            app:layout_constraintVertical_bias="0.11" />

        <EditText
            android:id="@+id/Sign_in_Password"
            android:layout_width="336dp"
            android:layout_height="49dp"
            android:backgroundTint="#090808"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#090808"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sign_in_Email"
            app:layout_constraintVertical_bias="0.085" />

        <Button
            android:id="@+id/sign_in"
            android:layout_width="338dp"
            android:layout_height="51dp"
            android:background="@color/btncolor"
            android:text="Sign In"
            android:enabled="false"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:textColor="#50ffffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sign_in_Password"
            app:layout_constraintVertical_bias="0.244" />

        <TextView
            android:id="@+id/tosignup"
            android:layout_width="352dp"
            android:layout_height="52dp"
            android:text="Don't have an account yet? Register here !"
            android:textColor="@color/colorprimaryblack"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in"
            app:layout_constraintVertical_bias="0.629" />

        <TextView
            android:id="@+id/or"
            android:layout_width="107dp"
            android:layout_height="39dp"
            android:text="or"
            android:textColor="@color/colorprimaryblack"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in"
            app:layout_constraintVertical_bias="0.09" />

        <View
            android:id="@+id/divider2"
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_marginEnd="28dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/or"
            app:layout_constraintEnd_toStartOf="@+id/or"
            app:layout_constraintTop_toTopOf="@+id/or"
            app:layout_constraintVertical_bias="0.542" />

        <View
            android:id="@+id/divider3"
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/or"
            app:layout_constraintEnd_toEndOf="@+id/sign_in"
            app:layout_constraintHorizontal_bias="0.404"
            app:layout_constraintStart_toEndOf="@+id/or"
            app:layout_constraintTop_toTopOf="@+id/or"
            app:layout_constraintVertical_bias="0.542" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>